<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class=>"form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group"><%= f.label :password, "New password", :class=>'control-label' %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "off", :class=>'form-control' %></div>

      <div class="form-group"><%= f.label :password_confirmation, "Confirm new password", :class=>'control-label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class=>'form-control' %></div>

      <div class="form-group"><%= f.submit "Change my password", :class=>"btn btn-default" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

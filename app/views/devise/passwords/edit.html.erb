<div class="container pi-section-w pi-shadow-inside-top pi-section-grey">
  <div class="pi-texture" style="background: url(../assets/hexagon.png) repeat"></div>
  <div class="col-sm-4 col-sm-offset-4 pi-section moorgoo-form-container">
    <h2 class="pi-weight-700 pi-uppercase pi-letter-spacing pi-text-center pi-margin-bottom-15">Change password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class=>"form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group moorgoo-form-element"><%= f.label :password, "New password", :class=>'control-label' %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "off", :class=>'form-control' %></div>

      <div class="form-group moorgoo-form-element"><%= f.label :password_confirmation, "Confirm new password", :class=>'control-label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class=>'form-control' %></div>

      <div class="form-group moorgoo-form-element"><%= f.submit "Change my password", :class=>"btn btn-default moorgoo-form-button" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
